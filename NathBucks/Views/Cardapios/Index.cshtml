@model IEnumerable<NathBucks.Models.Cardapio>

@{
    ViewData["Title"] = "Index";
    <style>
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://img.freepik.com/free-vector/restaurant-mural-wallpaper_52683-47493.jpg?w=1380&t=st=1696104351~exp=1696104951~hmac=1d7d71f1979fb7896dc78c74348761c93c56c5e9373b2f3c927c3ab876281018');
            background-repeat: no-repeat;
            background-size: cover;
            / Redimensiona a imagem para cobrir a tela inteira / background-position: center;
            / Centraliza a imagem / background-repeat: no-repeat;
            / Evita a repetição da imagem */ height: 100vh;
        }

        .table {
            background-color: rgb(210, 210, 210, 0.8);
            padding: 50px;
            justify-content: center;
            align-content: center;
            width: 100%;
            max-height: 400px;
            border-radius: 21px;
            font-size: 15pt;
            color: black;
        }
    </style>

}



<p>
    <form asp-action="Create">
        <input type="hidden" />
        <input type="submit" value="Criar" class="btn btn-primary" /> |
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoDrink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TamanhoDrink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDrink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoDrink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDrink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TamanhoDrink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDrink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoDrink)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCardapio" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdCardapio" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.IdCardapio" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
