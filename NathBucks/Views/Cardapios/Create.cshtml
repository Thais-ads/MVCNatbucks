@model NathBucks.Models.Cardapio

@{
    ViewData["Title"] = "Create";

    <style>
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://img.freepik.com/free-vector/restaurant-mural-wallpaper_52683-47493.jpg?w=1380&t=st=1696104351~exp=1696104951~hmac=1d7d71f1979fb7896dc78c74348761c93c56c5e9373b2f3c927c3ab876281018');
            background-repeat: no-repeat;
            background-size: cover;
            / Redimensiona a imagem para cobrir a tela inteira / background-position: center;
            / Centraliza a imagem / background-repeat: no-repeat;
            / Evita a repetição da imagem */ height: 100vh;
        }

        .row {
            
            padding: 50px;
            justify-content: center;
            align-content: center;
            width: 100%;
            max-height: 400px;
            border-radius: 21px;
            font-size: 15pt;
            color: black;
        }
        .titulo{
            color:white;
        }
    </style>
}


<h4 class="titulo">Cardapio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoDrink" class="control-label titulo"></label>
                <input asp-for="TipoDrink" class="form-control" />
                <span asp-validation-for="TipoDrink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamanhoDrink" class="control-label titulo"></label>
                <input asp-for="TamanhoDrink" class="form-control" />
                <span asp-validation-for="TamanhoDrink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoDrink" class="control-label titulo"></label>
                <input asp-for="DescricaoDrink" class="form-control" />
                <span asp-validation-for="DescricaoDrink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoDrink" class="control-label titulo"></label>
                <input asp-for="PrecoDrink" class="form-control" />
                <span asp-validation-for="PrecoDrink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
